}
bg(value) 
    background-color: value; 
c(value) { color: value }

tc() { text-align: center; }

flexcenter() {
    align-items: center; justify-content: center;
}

disin() { display: inline-block; }

computed(number, type)
    if type == 'h'
        number = px2vh(number)
    if type == 'w'
        number = px2vw(number)
    number * 1px

pl(number, type=false)
    padding-left computed(number, type);
pt(number, type=false)
    padding-top computed(number, type)
pbt(number, type=false)
    padding-bottom computed(number, type)
mt(number, type=false)
    margin-top computed(number, type);
ml(number, type=false)
    margin-left computed(number, type);
mb(number, type=false)
    margin-bottom computed(number, type);
mr(number, type=false)
    margin-right computed(number, type);
fzt(number, type=false)
    font-size computed(number, type);
lht(number, type=false)
    line-height computed(number, type);
ht(number, type = false)
    height computed(number, type);
wt(number, type = false)
    width computed(number, type);


// 媒体查询 方法
calcmedia(type, pc, mobile=false)
    @media (max-width: 768px) 
        if(mobile == false) 
            mobile = pc
        setMedia(type, mobile)
  
    @media (min-width: 769px) 
        setMedia(type, pc)

setMedia(type, value)
    
        if(type == "sz")
            font-size: value * 1px
        if(type == "pt")
            padding-top: value
        if(type == "pl")
            padding-left: value
        if(type == "mt")
            margin-top: value
        if(type == "mb")
            margin-bottom: value
        if(type == "m")
            margin: value
        if(type == "h")
            height: value
         if(type == "lh")
            line-height: value
        if(type == "p")
            padding: value
        if(type == "w")
            width: value
        if(type == "pr")
            position: value
        if(type == "t")
            top: value
        if(type == "ty")
            transform: translateY(value)
        if(type == "float")
            float: value
        if(type == "align")
            text-align: value
        


borderAni() 
    transition: all 0.3s ease; transform: translateX(-50%); left:50%; width: 0;

bgray() 
    border: 1px solid $border;

bbgray() 
    border-bottom: 1px solid $border;


tranall(number=false) 
    if(number==false)
        number = 1

    transition: all number*1s ease; cursor: pointer;

abs() 
    position absolute; top 0; left 0; bottom 0; right 0; margin auto;

transcale(number=false) 
    if(number==false)
        number = 1

    transform: scale(number)

size20() 
    calcmedia('sz', 20px, 14px)

size14() 
    calcmedia('sz', 14px, 12px)

fb() 
    font-weight: bold;

z(number)
    z-index: number