tra()
 transition: all 0.3s ease;

iconUrl(url) {
    background-size: 100% auto;
    background-repeat: no-repeat;
    background-image: url('../assets/icones/' + url);
}

iconBg() {
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
}

r(num) {
    num = num * 1deg
    transform:rotate(num);
}

line1() {
    display: block; overflow: hidden; white-space: nowrap; text-overflow: ellipsis;
}
line(line) {
    text-overflow: -o-ellipsis-lastline; overflow: hidden; text-overflow: ellipsis;
    display: -webkit-box; -webkit-line-clamp: line; -webkit-box-orient: vertical;
}

$baseHeight=1080;
$baseWidth=1920;

px2vh(px) {
    px/$baseHeight * 100vh ;
}
px2vw(px) {
    px/$baseWidth * 100vw ;
}

m(t) {
    margin: t;
}
p(t) {
    padding: t;
}
