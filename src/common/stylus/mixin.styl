//按钮鼠标浮上去
$blue = #17a7da 
$mGag = 10px;
$mHeaderHei = 60px;
$color-text = #333;
$c51 = #515151;

tra()
 transition: all 0.3s ease;

iconUrl(url) {
    background-size: 100% auto;
    background-repeat: no-repeat;
    background-image: url('../assets/icones/' + url);
}

iconBg() {
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
}

r(num) {
    num = num * 1deg
    transform:rotate(num);
}

line1() {
    display: block; overflow: hidden; white-space: nowrap; text-overflow: ellipsis;
}
line(line) {
    text-overflow: -o-ellipsis-lastline; overflow: hidden; text-overflow: ellipsis;
    display: -webkit-box; -webkit-line-clamp: line; -webkit-box-orient: vertical;
}

$baseHeight=1080;
$baseWidth=1920;

px2vh(px) {
    px/$baseHeight * 100vh ;
}
px2vw(px) {
    px/$baseWidth * 100vw ;
}

m(t) {
    margin: t;
}
p(t) {
    padding: t;
}
t(type) {
    text-align: type;
}
w(n) {
    width: n;
}
f(type) {
    float: type;
}
fz(size) {
    font-size: size;
}
lhh(number) {
    height: number; line-height: number;
}
lh(number) {
    line-height: number;
}
h(number) {
    height: number;
}
pr() {
    position: relative;
}
pb() {
    position: absolute;
}
pf() {
    position: fixed;
}
bg(value) { background-color: value; }
c(value) { color: value }

tc() { text-align: center; }

flexcenter() {
    align-items: center; justify-content: center;
}

disin() { display: inline-block; }

computed(number, type=false) 
    if type == 'h'
        number = px2vh(number)
    if type == 'w'
        number = px2vw(number)
    number * 1px

pl(number, type)
    padding-left computed(number, type);
pt(number, type)
    padding-top computed(number, type)
mt(number, type)
    margin-top computed(number, type);
ml(number, type)
    margin-left computed(number, type);
fzt(number, type)
    font-size computed(number, type);
lht(number, type)
    line-height computed(number, type);
ht(number, type = false) 
    height computed(number, type);
wt(number, type = false) 
    width computed(number, type);